{{ form_start(form) }}
    <div class="row">
        <div class="col">
            {{ form_row(form.nom) }}
        </div>
        <div class="col">
            {{ form_row(form.prenom) }}
        </div>
    
    </div>

    <div class="row">
        <div class="col">
            {{ form_label(form.email) }}
            {{ form_row(form.email) }}
        </div>
        <div class="col">
            {{ form_row(form.adresse) }}
        </div>
    
    </div>

    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
